<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.PrimaryController">
   <children>
      <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Text Editor">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Label text="By: GUI-ssica Soho" />
      <Button fx:id="createNewTextFileButton" mnemonicParsing="false" onAction="#handleCreateNewFile" prefHeight="26.0" prefWidth="100.0" text="Create">
         <VBox.margin>
            <Insets top="50.0" />
         </VBox.margin>
      </Button>
      <Button fx:id="loadTextFileButton" mnemonicParsing="false" onAction="#handleLoadTextFile" prefWidth="100.0" text="Load">
         <VBox.margin>
            <Insets bottom="40.0" top="10.0" />
         </VBox.margin>
      </Button>
      <Button fx:id="quitButton" mnemonicParsing="false" onAction="#handleQuit" prefWidth="100.0" text="Quit" />
      <Label text="Most recent edit:" textFill="#565656">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Label>
      <Label fx:id="showRecentFileUsed" text="-" textFill="#565656" />
   </children>
</VBox>
